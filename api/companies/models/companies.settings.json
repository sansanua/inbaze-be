{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "name": "Companies"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "instruments": {
      "collection": "instruments",
      "via": "companies",
      "dominant": true
    },
    "risk": {
      "type": "integer"
    },
    "complexity": {
      "type": "integer"
    },
    "liquidity": {
      "type": "enumeration",
      "enum": [
        "quickExit",
        "longExit"
      ]
    },
    "typeOfIncome": {
      "type": "enumeration",
      "enum": [
        "fixed",
        "floating"
      ]
    },
    "minimumInvestmentPeriod": {
      "type": "string"
    },
    "optimalInvestmentPeriod": {
      "type": "string"
    },
    "incomePaymentProcess": {
      "type": "richtext"
    },
    "risksOfLossInvested": {
      "type": "richtext"
    },
    "placeOfStorageFunds": {
      "type": "richtext"
    },
    "liquidityOfInvestment": {
      "type": "richtext"
    },
    "companyCommission": {
      "type": "richtext"
    },
    "otherServiceCharges": {
      "type": "richtext"
    },
    "payingTaxesIncome": {
      "type": "boolean",
      "default": false
    },
    "documentsSecuringRights": {
      "type": "richtext"
    },
    "documentsActivities": {
      "type": "richtext"
    },
    "documentsFromInvestor": {
      "type": "richtext"
    },
    "site": {
      "type": "string"
    },
    "startYear": {
      "type": "integer"
    },
    "numberOfClients": {
      "type": "integer"
    },
    "onlineInvestmentStatusTracking": {
      "type": "boolean",
      "default": false
    },
    "minimumInvestmentAmount": {
      "type": "integer",
      "required": true
    },
    "historicalProfitability": {
      "type": "text"
    },
    "capital": {
      "type": "integer"
    },
    "profitability": {
      "model": "profitability",
      "via": "companies"
    },
    "aboutCompany": {
      "type": "richtext"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "processOfManagingMoney": {
      "type": "richtext"
    },
    "processOfGeneratingIncome": {
      "type": "richtext"
    },
    "descriptionOfCooperation": {
      "type": "richtext"
    },
    "investmentCurrency": {
      "model": "currencies",
      "via": "investmentCompanies"
    },
    "secondInvestmentCurrency": {
      "model": "currencies",
      "via": "secondInvestmentCompanies"
    },
    "secondMinimumInvestmentAmount": {
      "type": "integer"
    },
    "secondHistoricalProfitability": {
      "type": "text"
    },
    "currencyIncome": {
      "collection": "currencies",
      "via": "incomeCompanies",
      "dominant": true
    }
  }
}
